<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vikas.androidcomponentscatalogue">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidComponentsCatalogue">
        <activity android:name=".alarm.AlarmActivity"/>
        <activity android:name=".settingsPref.SettingsPrefActivity" />
        <activity android:name=".room.add.AddNotesActivity" />
        <activity android:name=".room.notesList.RoomMainActivity" />
        <activity android:name=".customview.CustomViewActivity" />
        <activity android:name=".daynight.DayNightActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".alarm.AlarmReceiver"/>
    </application>

</manifest>